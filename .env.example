# Security Configuration

# JWT Secret Key - MUST be changed in production!
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-VALUE-IN-PRODUCTION

# Admin Password - MUST be changed in production!
ADMIN_PASSWORD=admin123

# Debug Mode - Set to true to disable password encryption (FOR DEBUGGING ONLY!)
DEBUG_MODE=false

# Internal Service Token - MUST be changed in production!
# This should be the same across all services
INTERNAL_TOKEN=change-this-internal-token-in-production

# Service Ports
DATA_NODE_PORT=8001
AUTH_NODE_PORT=8002
TEACHER_NODE_PORT=8003
STUDENT_NODE_PORT=8004
QUEUE_NODE_PORT=8005

# Socket Communication (Development)
# In development, services listen on BOTH socket and HTTP simultaneously
# Set to true to enable Unix socket support for inter-service communication
USE_SOCKETS=true
SOCKET_DIR=/tmp/course-selection-sockets

# Service URLs (Production - when USE_SOCKETS=false)
# Uncomment and configure for production deployment
# DATA_NODE_URL=http://data-service:8001
# AUTH_NODE_URL=http://auth-service:8002
# TEACHER_NODE_URL=http://teacher-service:8003
# STUDENT_NODE_URL=http://student-service:8004
# QUEUE_NODE_URL=http://queue-service:8005
